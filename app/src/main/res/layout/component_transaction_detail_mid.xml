<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingHorizontal="25dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvTypeDetailTrans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="type"
        android:textSize="12sp"
        android:layout_marginTop="15dp"
        android:textColor="@color/grey"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/tvReceiverNameDetailTrans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Receiver name"
        android:textSize="15sp"
        style="@style/BoldText"
        app:layout_constraintTop_toBottomOf="@id/tvTypeDetailTrans"
        app:layout_constraintStart_toStartOf="@id/tvTypeDetailTrans"/>
    <TextView
        android:id="@+id/tvReceiverAccDetailTrans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_marginTop="5dp"
        android:text="Receiver Account"
        app:layout_constraintTop_toBottomOf="@id/tvReceiverNameDetailTrans"
        app:layout_constraintStart_toStartOf="@id/tvTypeDetailTrans"/>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginVertical="15dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvReceiverAccDetailTrans" />

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginVertical="15dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvNominalTitle" />

    <TextView
        android:id="@+id/tvTransDetailTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detail transaksi"
        android:textColor="@color/grey"
        android:textSize="12sp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@id/tvTypeDetailTrans"
        app:layout_constraintTop_toBottomOf="@+id/view" />
    <TextView
        android:id="@+id/tvNominalTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nominal Transaksi"
        style="@style/BoldText"
        android:textSize="15sp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="@id/tvTypeDetailTrans"
        app:layout_constraintTop_toBottomOf="@id/tvTransDetailTitle" />

    <TextView
        android:id="@+id/tvNominalTransDetail"
        style="@style/BoldText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Rp100.000"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTransDetailTitle" />
    <TextView
        android:id="@+id/tvBalanceSourceTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rekening Sumber"
        android:textColor="@color/grey"
        android:textSize="12sp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@id/tvTypeDetailTrans"
        app:layout_constraintTop_toBottomOf="@+id/view2" />

    <TextView
        android:id="@+id/tvBalanceSourceName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pesulap Merah"
        style="@style/BoldText"
        android:textSize="18sp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="@id/tvTypeDetailTrans"
        app:layout_constraintTop_toBottomOf="@id/tvBalanceSourceTitle" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bank Jaya.........1234"
        android:textSize="12sp"
        android:layout_marginTop="10dp"
        android:paddingBottom="15dp"
        app:layout_constraintStart_toStartOf="@id/tvTypeDetailTrans"
        app:layout_constraintTop_toBottomOf="@id/tvBalanceSourceName" />



</androidx.constraintlayout.widget.ConstraintLayout>