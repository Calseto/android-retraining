<?xml version="1.0" encoding="utf-8"?>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="85dp">

        <ImageView
            android:id="@+id/ivDotTrans"
            android:layout_width="9dp"
            android:layout_height="9dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/notif_circle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvTitleNotif"
            style="@style/BoldText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Transaksi Tarik Tunai berhasil"
            app:layout_constraintBottom_toBottomOf="@id/ivDotTrans"
            app:layout_constraintStart_toEndOf="@id/ivDotTrans"
            app:layout_constraintTop_toTopOf="@id/ivDotTrans" />


        <TextView
            android:id="@+id/tvDescNotif"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="85dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:paddingStart="2dp"
            android:text="lorem ipsum"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tvTitleNotif"
            app:layout_constraintTop_toBottomOf="@+id/tvTitleNotif" />

        <TextView
            android:id="@+id/tvDateNotif"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:text="09 Nov"
            android:textColor="@color/grey"
            android:textSize="11sp"
            app:layout_constraintBottom_toBottomOf="@+id/tvTitleNotif"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvTitleNotif" />
    </androidx.constraintlayout.widget.ConstraintLayout>