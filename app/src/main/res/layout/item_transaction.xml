<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/vItemTransaction"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivDotTrans"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="10dp"
        android:backgroundTint="@color/blue"
        android:scaleType="fitXY"
        android:src="@drawable/wallet_alt_svgrepo_com"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tvTitleTrans"
        style="@style/BoldText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="Bank Mandiri - Fdc Bintaro"
        app:layout_constraintBottom_toTopOf="@+id/tvSubTitleTrans"
        app:layout_constraintStart_toEndOf="@+id/ivDotTrans"
        app:layout_constraintTop_toTopOf="@id/ivDotTrans" />

    <TextView
        android:id="@+id/tvSubTitleTrans"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="ini adalah subtitle"
        android:textSize="12dp"
        app:layout_constraintBottom_toTopOf="@+id/tvStatusTrans"
        app:layout_constraintEnd_toStartOf="@+id/tvNominalTrans"
        app:layout_constraintStart_toStartOf="@+id/tvTitleTrans"
        app:layout_constraintTop_toBottomOf="@+id/tvTitleTrans" />

    <TextView
        android:id="@+id/tvStatusTrans"
        style="@style/BoldText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:paddingStart="2dp"
        android:text="Berhasil"
        android:textColor="@color/Green"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/ivDotTrans"
        app:layout_constraintStart_toStartOf="@+id/tvSubTitleTrans"
        app:layout_constraintTop_toBottomOf="@+id/tvSubTitleTrans" />

    <TextView
        android:id="@+id/tvDateNotif"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="09 Nov 2024"
        android:textColor="@color/grey"
        android:textSize="11sp"
        app:layout_constraintStart_toStartOf="@+id/ivDotTrans"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvNominalTrans"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="25dp"
        android:text="- RP 100.000.00"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvTitleTrans"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvTitleTrans" />
</androidx.constraintlayout.widget.ConstraintLayout>