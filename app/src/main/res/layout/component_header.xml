<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitStart"
        android:src="@drawable/livin_logo2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/image_banner"
        android:layout_width="124dp"
        android:layout_height="136dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/lari"
        app:layout_constraintEnd_toStartOf="@+id/textBanner3"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/textBanner1" />

    <TextView
        android:id="@+id/textBanner1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selamat siang,"
        android:textColor="@color/dark_blue"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/textBanner2"
        app:layout_constraintEnd_toStartOf="@+id/textBanner2"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/textBanner2" />

    <TextView
        android:id="@+id/textBanner2"
        style="@style/BoldText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="25dp"
        android:text="Paschalis Seto W ...!"
        android:textColor="@color/dark_blue"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toStartOf="@+id/imageView2"
        app:layout_constraintStart_toEndOf="@+id/textBanner1" />

    <TextView
        android:id="@+id/textBanner3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="5dp"
        android:text="Mau transfer,bayar, dan \ntop up lebih cepat"
        android:textSize="17sp"
        app:layout_constraintBottom_toTopOf="@+id/imageButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/image_banner"
        app:layout_constraintTop_toTopOf="@+id/image_banner" />

    <Button
        android:id="@+id/imageButton"
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:layout_marginBottom="5dp"
        android:text="Atur Sekarang"
        android:textColor="@color/white"
        app:backgroundTint="@color/blue"
        app:layout_constraintBottom_toBottomOf="@id/image_banner"
        app:layout_constraintEnd_toEndOf="@id/textBanner3"
        app:layout_constraintStart_toStartOf="@id/textBanner3"
        app:layout_constraintTop_toBottomOf="@+id/textBanner3"
        tools:layout_editor_absoluteX="249dp" />


</androidx.constraintlayout.widget.ConstraintLayout>